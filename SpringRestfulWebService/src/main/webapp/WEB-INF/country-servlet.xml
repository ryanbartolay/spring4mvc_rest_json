<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="countryController" class="com.ryan.rest.controller.CountryController">
		<property name="countryService" ref="countryService" />
	</bean>
	
	<bean id="countryService" class="com.ryan.service.CountryService">
		<property name="restResponse">
			<ref bean="restResponsed" />
		</property>
	</bean>
	
	<bean id="restResponsed" class="com.ryan.rest.model.ErrorResponse" />	

</beans>
